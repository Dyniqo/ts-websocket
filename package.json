{
  "name": "@dyniqo/ts-websocket",
  "version": "1.0.1",
  "author": {
    "name": "Dyniqo",
    "url": "https://github.com/Dyniqo"
  },
  "description": "A robust and flexible TypeScript library for managing WebSocket connections alongside an HTTP server. This library provides seamless integration into Node.js applications with built-in support for dependency injection, modular design, and extensibility.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "npm run clean && tsc && rollup -c",
    "clean": "rimraf ./dist",
    "prepublish": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit -p tsconfig.lib.json"
  },
  "keywords": [
    "websocket",
    "ws",
    "typescript",
    "ts",
    "reconnecting",
    "nodejs",
    "library",
    "ts-websocket",
    "real-time",
    "websocket-manager",
    "real-time-communication",
    "dependency-injection",
    "modular-library",
    "websocket-library",
    "websocket-server",
    "real-time-apps"
  ],
  "homepage": "https://github.com/Dyniqo/ts-websocket",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dyniqo/ts-websocket.git"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/inversify": "^2.0.33",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.9.0",
    "@types/ws": "^8.5.13",
    "bufferutil": "^4.0.8",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^8.5.1",
    "reflect-metadata": "^0.2.2",
    "stream-http": "^3.2.0",
    "ts-jest": "^29.2.5",
    "typescript-eslint": "^8.14.0",
    "url": "^0.11.4",
    "utf-8-validate": "^6.0.5"
  },
  "peerDependencies": {
    "ws": "^8.18.0"
  },
  "publishConfig": {
    "access": "public"
  }
